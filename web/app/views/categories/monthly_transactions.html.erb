<h1>Transactions for <%= @category.name %></h1>
<% if @transactions.any? %>
  <table class="table table-striped">
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
    </tr>
    <% @transactions.each do |t| %>
      <tr>
        <td><%= t.date %></td>
        <td><%= t.description %></td>
        <td><%= number_to_currency(t.amount) %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>There are no transactions for this month.</p>
<% end %>
